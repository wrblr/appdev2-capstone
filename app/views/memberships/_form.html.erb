<%= form_with model: @membership, url: memberships_path, local: true do |form| %>
  <% if @membership.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@membership.errors.count, "error") %> prevented this membership from being saved:</h4>
      <ul>
        <% @membership.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4 text-center">
    <%= form.label :group_id, "Select a Group to Join", class: "form-label fw-bold", style: "font-family: 'Cinzel Decorative', serif;" %>

    <% available_groups = Group.includes(:memberships).where.not(name: nil).select do |group| %>
      <% group.memberships.none? { |m| m.user == current_user } %>
    <% end %>

    <%= form.select :group_id,
          options_from_collection_for_select(
            available_groups,
            :id,
            ->(group) {
              label = group.name
              label += " (you created this)" if group.memberships.first&.user == current_user
              label
            }
          ),
          { prompt: "Choose a group" },
          class: "form-select mx-auto",
          style: "max-width: 400px;" %>
  </div>

  <div class="d-flex justify-content-center gap-3 mt-4">
    <%= form.submit "Join Group", class: "btn btn-primary px-4" %>
    <%= link_to "Create New Group", new_group_path, class: "btn btn-outline-secondary px-4" %>
  </div>
<% end %>

