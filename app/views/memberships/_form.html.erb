<%= form_with(model: membership) do |form| %>
  <% if membership.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(membership.errors.count, "error") %> prohibited this membership from being saved:</h4>
      <ul>
        <% membership.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :group_id, "Select Existing Group", class: "form-label" %>
    <%= form.collection_select :group_id, Group.all, :id, :name, { prompt: "Choose a group" }, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= link_to "Or create a new group", new_group_path, class: "btn btn-outline-primary" %>
  </div>
  <div class="mb-3">
    <%= form.label :user_id, "Select User", class: "form-label" %>
    <%= form.collection_select :user_id, User.all, :id, :email, { prompt: "Choose a user" }, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= link_to "Or add a new user", new_user_registration_path, class: "btn btn-outline-primary" %>
  </div>
  <div class="mt-4">
    <%= form.submit class: "btn btn-primary w-100" %>
  </div>
<% end %>
