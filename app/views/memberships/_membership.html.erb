<div id="<%= dom_id membership %>">
  <p>
    <strong>Group:</strong>
    <%= membership.group_id %>
  </p>

  <p>
    <strong>User:</strong>
    <%= membership.user_id %>
  </p>

</div>

<hr>

<% group = membership.group %>

<div class="text-center" id="<%= dom_id(membership) %>">
  <%= link_to group_path(group), class: "text-decoration-none text-center" do %>
    <div class="rounded-circle d-flex align-items-center justify-content-center bg-primary text-white shadow mx-auto"
         style="width: 120px; height: 120px; font-size: 1.25rem; font-weight: bold; font-family: 'Cinzel Decorative', serif;">
      <%= group.name.first.upcase %>
    </div>
    <p class="mt-2 fw-bold" style="font-family: 'Cinzel Decorative', serif;"><%= group.name %></p>
  <% end %>
</div>

<p class="text-muted small mt-1" style="font-family: 'Cinzel Decorative', serif;">
  <%= membership.user.email %>
</p>
