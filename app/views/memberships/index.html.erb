<% content_for :title, "Messages" %>
<div class="container mt-4 mb-3 p-4 bg-white rounded shadow-sm" style="max-width: 1000px; height: 600px">
  <h2 class="text-center mb-4 mt-2 fw-bold" style="font-family: 'Cinzel Decorative', serif;">
    Your Chats
  </h1>

  <div class="d-flex justify-content-center gap-5 flex-wrap">

    <!-- GROUP CHAT SECTION -->
    <div class="bg-white p-4 shadow rounded" style="width: 360px;">
      <h3 class="text-center fw-bold mb-3" style="font-family: 'Cinzel Decorative';">Group Chats</h2>

      <hr>

      <% if @memberships.any? %>
        <div class="d-flex flex-column gap-3" style="overflow-y: auto; height: 200px;">
          <% @memberships.each do |membership| %>
            <% group = membership.group %>
            <div class="text-center">
              <%= link_to group_path(group), class: "d-flex align-items-center gap-3 text-decoration-none text-dark p-2 border rounded hover:bg-light" do %>
                <% if group.image.attached? %>
                  <%= image_tag group.image.variant(resize_to_fill: [40, 40]),
                        class: "img-fluid rounded-circle shadow-sm",
                        style: "object-fit: cover; width: 40px; height: 40px;" %>
                <% else %>
                  <%= image_tag "default-group.jpeg",
                        class: "img-fluid rounded-circle shadow-sm",
                        style: "object-fit: cover; width: 40px; height: 40px;" %>
                <% end %>
                <span style="font-family: 'Cinzel Decorative', serif;"><%= group.name %></span>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-center text-muted mt-3" style="font-family: 'Cinzel Decorative', serif;">No group memberships found.</p>
      <% end %>

      <hr>

      <div class="text-center mb-3">
        <%= link_to "Join a New Group", new_membership_path, class: "btn btn-primary px-4 py-2", style: "font-family: 'Cinzel Decorative', serif;" %>
      </div>
    </div>

    <!-- PRIVATE CHAT SECTION -->
    <div class="bg-white p-4 shadow rounded" style="width: 360px;">
      <h3 class="text-center fw-bold mb-3" style="font-family: 'Cinzel Decorative';">Private Chats</h2>
      <hr>
      <% if @chat_partners.any? %>
        <div class="d-flex flex-column gap-3" style="overflow-y: auto; max-height: 200px;">
          <% @chat_partners.each do |user| %>
            <%= link_to chat_user_path(current_user, user), class: "d-flex align-items-center gap-3 text-decoration-none text-dark p-2 border rounded hover:bg-light" do %>
              <%= image_tag user.image.attached? ? user.image.variant(resize_to_fill: [40, 40]) : "default-avatar.jpeg",
                  class: "rounded-circle",
                  style: "width: 40px; height: 40px; object-fit: cover;" %>
              <span style="font-family: 'Cinzel Decorative', serif;"><%= user.email.split('@').first.titleize %></span>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-center text-muted mt-3" style="font-family: 'Cinzel Decorative', serif;">No recent private chats found.</p>
      <% end %>
      <hr>
      <div class="text-center mb-3">
        <%= link_to "Start a New Chat", new_private_message_path, class: "btn btn-primary px-4 py-2", style: "font-family: 'Cinzel Decorative', serif;" %>
      </div>

    </div>

  </div>
</div>
