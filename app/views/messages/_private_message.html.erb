<% is_current_user = message.sender == current_user %>
<div class="flex <%= is_current_user ? 'justify-end' : 'justify-start' %>">
  <div class="<%= is_current_user ? 'bg-blue-100 text-right' : 'bg-gray-100 text-left' %> p-2 rounded-lg max-w-xs shadow">
    <strong class="block text-sm text-gray-700 mb-1" style="font-family: 'Cinzel Decorative', serif;">
      <%= is_current_user ? 'You' : message.sender.email.split('@').first.titleize %>:
    </strong>
    <span class="text-sm text-gray-800"><%= message.translated_body.presence || message.body %></span>
    <small class="text-muted ms-2" style="font-family: 'Cinzel Decorative', serif;"><%= message.created_at.strftime("%H:%M") %></small>
  </div>
</div>
