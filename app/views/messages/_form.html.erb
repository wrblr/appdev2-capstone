<%= form_with model: @message, url: messages_path, data: { turbo_stream: true }, html: { id: "message-form" } do |form| %>
  <%= form.hidden_field :sender_id, value: current_user.id %>

  <% if @recipient %>
    <%= form.hidden_field :recipient_id, value: @recipient.id %>
  <% elsif @group %>
    <%= form.hidden_field :group_id, value: @group.id %>
  <% end %>

  <%= form.hidden_field :original_language_id, value: current_user.preferred_language_id %>

  <div class="input-group">
    <%= form.text_field :body, class: "form-control", placeholder: "Type your message...", autofocus: true, style: "font-family: 'Cinzel Decorative', serif;" %>
    <button type="submit" class="btn btn-primary" style="font-family: 'Cinzel Decorative', serif;">Send</button>
  </div>
<% end %>
