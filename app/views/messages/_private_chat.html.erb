<div id="private-chat-window">
  <% if @messages.any? %>
    <% @messages.each do |message| %>
      <%= render partial: "messages/private_message", locals: { message: message, current_user: current_user } %>
    <% end %>
  <% else %>
    <p class="text-center text-muted" style="font-family: 'Cinzel Decorative', serif;">No messages yet. Start the conversation below!</p>
  <% end %>
</div>
