<div id="private-chat-window" class="space-y-2">
  <% if @messages.any? %>
    <% @messages.each do |message| %>
      <%= render partial: "messages/private_message", locals: { message: message, current_user: current_user } %>
    <% end %>
  <% else %>
    <p class="text-center text-muted">No messages yet. Start the conversation below!</p>
  <% end %>
</div>
