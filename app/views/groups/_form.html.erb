<div class="container d-flex justify-content-center mt-5">
  <div class="col-md-8 col-lg-6 bg-white p-4 rounded shadow-sm">

    <%= form_with model: @group, local: true, html: { multipart: true } do |form| %>

      <% if @group.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h4>
          <ul>
            <% @group.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Group Name -->
      <div class="mb-3">
        <%= form.label :name, class: "form-label fw-bold", style: "font-family: 'Cinzel Decorative', serif;" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <!-- Group Image -->
      <div class="mb-3 text-center">
        <label class="form-label fw-bold" style="font-family: 'Cinzel Decorative', serif;">Default Group Image</label>
        <div>
          <% if @group.image.attached? %>
            <%= image_tag @group.image.variant(resize_to_limit: [150, 150]), class: "rounded-circle shadow-sm mb-2", style: "width: 150px; height: 150px; object-fit: cover;" %>
          <% else %>
            <%= image_tag "default-group.jpeg", class: "rounded-circle shadow-sm mb-2", style: "width: 150px; height: 150px; object-fit: cover;" %>
          <% end %>
        </div>
        <%= form.file_field :image, class: "form-control mt-2" %>
        <small class="form-text text-muted">Optional: Upload a custom image</small>
      </div>

      <!-- Add Members -->
      <div class="mb-3">
        <label class="form-label fw-bold" style="font-family: 'Cinzel Decorative', serif;">Add Members by Email (optional)</label>
        <%= text_area_tag :user_emails, nil, placeholder: "one@example.com, two@example.com", class: "form-control", rows: 3 %>
        <small class="form-text text-muted">Separate emails with commas or new lines.</small>
      </div>

      <!-- Submit -->
      <div class="d-grid">
        <%= form.submit "Create Group", class: "btn btn-primary fw-bold", style: "font-family: 'Cinzel Decorative', serif;" %>
      </div>

    <% end %>
  </div>
</div>
